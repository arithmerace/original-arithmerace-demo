{
  "rules": {
    "ustatus": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "auth.uid !== null",
        ".validate": "newData.child('status').val() === 'online' || newData.child('status').val() === 'offline'"
      }
    },
    "waitingroom": {
      ".read": "auth.uid !== null",
      "$uid": {
        ".write": "auth.uid === $uid",
        ".validate": "!newData.exists() || newData.child('waiting').val() === true"
      }
    },
    "user": {
      "$uid": {
        ".indexOn": ["profile"],
        ".read": true,
        "profile": {
          ".indexOn": ["username"],
          "username": {
            ".write": "auth.uid === $uid",
            ".validate": "newData.isString() && newData.val().length <= 16"
          }
        }
      }
    },
    "race": {
      "$raceid": {
        ".read": "auth.uid !== null",
        "player": {
          "$playerid": {
            ".write": false
          }
        }
      }
    },
    "_race": {
      ".read": false
    }
  }
}
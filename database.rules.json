{
  "rules": {
    "ustatus": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": "auth.uid !== null",
        ".validate": "newData.child('status').val() === 'online' || newData.child('status').val() === 'offline'"
      }
    },
    "waitingroom": {
      ".read": true,
      "$uid": {
        "waiting": {
          ".write": "auth.uid === $uid"
        }
      }
    },
    "user": {
      "$uid": {
        ".read": true,
        "username": {},
        "robot": {},
        "account": {
          "arithmecoin": {},
          "robots": {
            "$robotName": {}
          }
        },
        "profile": {},
        "career": {}
      }
    },
    "usernames": {
      "$uname": {
        ".read": true,
        "uid": {}
      }
    },
    "race": {
      "$raceid": {
        ".read": "auth.uid !== null",
        "player": {
          "$playerid": {
            ".write": false
          }
        }
      }
    },
    "_race": {
      ".read": false
    }
  }
}